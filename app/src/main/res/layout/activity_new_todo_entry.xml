<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTodoEntryActivity"
    android:padding="16dp">

    <EditText
        android:id="@+id/edittext_new_todo_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textview_new_todo_entry_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_new_todo_entry_title" />

    <TextView
        android:id="@+id/textview_new_todo_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Todo entry"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_new_todo_entry_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/edittext_new_todo_entry_title"
        app:layout_constraintTop_toBottomOf="@+id/edittext_new_todo_entry_title" />

    <Button
        android:id="@+id/button_new_todo_entry_duedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="showDatePicker"
        android:text="Pick a due date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_new_todo_entry_description" />

    <Button
        android:id="@+id/button_new_todo_entry_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="onSubmitClickListener"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_new_todo_entry_duedate" />

</androidx.constraintlayout.widget.ConstraintLayout>